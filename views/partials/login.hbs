<!-- LOGIN FORM -->
<html>
  <body>
    <div class='login-form'>
      <form action='' method='post' class='form' id='form-1'>
        <h2 class='heading'>ĐĂNG KÝ TÀI KHOẢN</h2>
        <div class='spacer'></div>
        <div class='form-group'>
          <label for='fullName' class='form-label'>Tên đầy đủ</label>
          <input
            id='fullName'
            name='fullName'
            type='text'
            placeholder='VD: Lê Quốc Ngô'
            class='form-control'
          />
          <span class='form-message'></span>
        </div>
        <div class='form-group'>
          <label for='email' class='form-label'>Email</label>
          <input
            id='email'
            name='email'
            type='text'
            placeholder='VD: ngolq.work@gmail.com'
            class='form-control'
          />
          <span class='form-message'></span>
        </div>
        <div class='form-group'>
          <label for='password' class='form-label'>Mật khẩu</label>
          <input
            id='password'
            name='password'
            type='text'
            placeholder='Nhập mật khẩu'
            class='form-control'
          />
          <span class='form-message'></span>
        </div>
        <div class='form-group'>
          <label for='password-confirmation' class='form-label'>Nhập lại mật
            khẩu</label>
          <input
            id='password_confirmation'
            name='password_confirmation'
            type='text'
            placeholder='VD: Lê Quốc Ngô'
            class='form-control'
          />
          <span class='form-message'></span>
        </div>
        <div class='form-group'>
          <button class='form-submit'>Đăng ký</button>
        </div>
      </form>
    </div>
    <script src='/js/form-validation.js'></script>
    <script>
      Validator({ form: '#form-1', rules: [ Validator.isRequired('#fullName'),
      Validator.isEmail('#email'), ] });
    </script>
  </body>
</html>